<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.controllers.RentCarController" spacing="20" stylesheets="@style.css" style="-fx-background-color: #f8f9fa; -fx-padding: 30;">
    <!-- Header with Back Button -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="â† Back to Bookings" onAction="#handleBackToBookings"
               style="-fx-background-color: white; -fx-text-fill: #3b82f6; -fx-border-color: #3b82f6; -fx-border-width: 1.5; -fx-background-radius: 8; -fx-padding: 8 16; -fx-font-weight: 600; -fx-cursor: hand;" />
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label text="Rent a Car" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #111827;" />
            <Label text="Find the perfect vehicle for your journey" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;" />
        </VBox>
    </HBox>

    <!-- Search Form -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;">
        <children>
            <Label text="Location:" />
            <ComboBox fx:id="locationCombo" prefWidth="180" />
            <Label text="Pickup:" />
            <DatePicker fx:id="pickupDate" />
            <Label text="Return:" />
            <DatePicker fx:id="returnDatePicker" />
            <Button text="Search Cars" onAction="#handleSearch" styleClass="primary-button" />
        </children>
    </HBox>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <content>
            <FlowPane fx:id="carContainer" hgap="12" vgap="12">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12" />
                </padding>
            </FlowPane>
        </content>
        </ScrollPane>
    </children>
</VBox>
