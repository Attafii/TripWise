<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.controllers.SignupController" styleClass="login-root" stylesheets="@style.css">
    <VBox alignment="CENTER" spacing="0" maxWidth="450" maxHeight="650" styleClass="login-card">
        <padding>
            <Insets top="40" right="50" bottom="40" left="50" />
        </padding>

        <Label text="TripWise" styleClass="brand-logo" />
        <Label text="Join us and start your journey today." styleClass="brand-subtitle" />

        <VBox spacing="15" styleClass="form-container">
            <VBox spacing="6">
                <Label text="Full Name" styleClass="input-label" />
                <TextField fx:id="nameField" promptText="Enter your name" styleClass="modern-input" />
            </VBox>

            <VBox spacing="6">
                <Label text="Email" styleClass="input-label" />
                <TextField fx:id="emailField" promptText="Enter your email" styleClass="modern-input" />
            </VBox>

            <VBox spacing="6">
                <Label text="Password" styleClass="input-label" />
                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="modern-input" />
            </VBox>

            <VBox spacing="6">
                <Label text="Confirm Password" styleClass="input-label" />
                <PasswordField fx:id="confirmPasswordField" promptText="••••••••" styleClass="modern-input" />
            </VBox>

            <Label fx:id="messageLabel" styleClass="error-text" managed="false" visible="false" />

            <Button text="Create Account" onAction="#handleSignup" maxWidth="Infinity" styleClass="primary-button" prefHeight="45" />

            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?" styleClass="secondary-text" />
                <Hyperlink text="Log in" onAction="#handleBackToLogin" styleClass="modern-link" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>
