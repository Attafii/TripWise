<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.controllers.DashboardController"
            stylesheets="@style.css">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox spacing="12" alignment="TOP_LEFT" styleClass="sidebar" prefWidth="220">
            <children>
                <Label text="TripWise"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 10;" />

                <!-- Existing navigation -->
                <Button text="Home"        onAction="#onHome"       styleClass="sidebar-button"/>
                <Button text="Book Hotel"  onAction="#onBookHotel"  styleClass="sidebar-button"/>
                <Button text="Book Flight" onAction="#onBookFlight" styleClass="sidebar-button"/>
                <Button text="Rent Car"    onAction="#onRentCar"    styleClass="sidebar-button"/>
                <Button text="Profile"     onAction="#onProfile"    styleClass="sidebar-button"/>

                <!-- â­ Your module -->
                <Button text="Remboursements" onAction="#openRemboursements" styleClass="sidebar-button"/>

                <Region VBox.vgrow="ALWAYS"/>
                <Button text="Logout" onAction="#onLogout" styleClass="logout-button"/>
            </children>
        </VBox>
    </left>

    <!-- MAIN CONTENT AREA -->
    <center>
        <!-- Controlled by DashboardController via fx:id=rootPane -->
        <BorderPane fx:id="rootPane">
            <top>
                <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-bar" padding="10">
                    <children>
                        <Label fx:id="titleLabel" text="Home" styleClass="page-title"/>
                    </children>
                </HBox>
            </top>

            <!-- Default content -->
            <center>
                <fx:include source="/ui/home-center.fxml"/>
            </center>
        </BorderPane>
    </center>

</BorderPane>